{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 800,
  "height": 600,
  "title": "TB Cases per Country (2021)",
  "data": {
    "url": "https://raw.githubusercontent.com/leafianna/fit3179/main/Assign2/Data/merged_data2.csv"
  },
  "params": [
    {
      "name": "Continent_selection",
      "bind": {
        "input": "select",
        "options": [
          null,
          "North America",
          "South America",
          "Europe",
          "Africa",
          "Asia",
          "Oceania"
        ],
        "labels": [
          "Show All",
          "North America",
          "South America",
          "Europe",
          "Africa",
          "Asia",
          "Oceania"
        ],
        "name": "Continent Selection: "
      }
    },
    {
      "name": "Population_Above",
      "value": 0,
      "bind": {
        "input": "range",
        "min": 0,
        "max": 100000000,
        "step": 1000000,
        "name": "Minimum Population: "
      }
    }
  ],
  "transform": [
    {"filter": "datum.e_inc_num > 0"},
    {"filter": "datum.e_mort_num > 0"},
    {"filter": "datum.year == 2021"},
    {"filter": "Continent_selection == null || datum.Continent == Continent_selection"},
    {"filter": "datum.Population > Population_Above"}
  ],
  "encoding": {
    "x": {
      "field": "e_inc_num",
      "type": "quantitative",
      "title": "New Cases",
      "axis": {"tickCount": 7},
      "scale": {"type": "log", "domain": [1, 10000000]}
    },
    "y": {
      "field": "e_mort_num",
      "type": "quantitative",
      "title": "Deaths",
      "axis": {"tickCount": 6},
      "scale": {"type": "log", "domain": [1, 1000000]}
    },
    "size": {
      "field": "Population",
      "type": "quantitative",
      "scale": {
        "type": "threshold",
        "domain": [1000000, 10000000, 50000000, 100000000, 500000000],
        "range": [10, 50, 150, 200, 300, 400]
      },
      "legend": {"format": ".1s"}
    },
    "color": {
      "field": "Continent",
      "type": "nominal",
      "scale": {
        "domain": [
          "North America",
          "South America",
          "Europe",
          "Africa",
          "Asia",
          "Oceania"
        ],
        "range": [
          "#e41a1c",
          "#984ea3",
          "#ff7f00",
          "#a6cee3",
          "#377eb8",
          "#a65628"
        ]
      }
    },
    "opacity": {"value": 0.6},
    "tooltip": [
      {"field": "country", "type": "nominal"},
      {"field": "e_pop_num", "type": "quantitative", "title": "Population"},
      {"field": "e_inc_num", "type": "quantitative", "title": "New Cases"},
      {"field": "e_mort_num", "type": "quantitative", "title": "Deaths"}
    ]
  },
  "mark": {
    "type": "circle",
    "opacity": 0.6
  }
}
